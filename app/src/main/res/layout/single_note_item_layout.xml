<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView

        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@drawable/cardview_backgroud_wholeapp"
        app:cardElevation="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_margin="@dimen/_7sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_14sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/date"
                style="@style/gary_text_style_8_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2-5-2019" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                style="@style/heading_style_12_bold_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:text="Lorem Ipsum" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/message"
                style="@style/gary_text_style_8_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:text="Lorem Ipsum is simply dummy" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_dots_icon" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>

